<resources>

    <style name="AppTheme" parent="android:Theme.Light" />
	<style name="im_button">
        <item name="android:background">@drawable/btn_default_bg</item>
    </style>
    <style name="im_popup_number_button" parent="@android:style/Widget.Button">
        <item name="android:layout_width">95sp</item>
        <item name="android:layout_height">70sp</item>
        <item name="android:background">@drawable/btn_default_bg</item>
    </style>

    <style name="im_popup_note_number_button" parent="@android:style/Widget.Button.Toggle">
        <item name="android:layout_width">95sp</item>
        <item name="android:layout_height">70sp</item>
        <item name="android:background">@drawable/btn_toggle_bg</item>
    </style>

    <style name="im_popup_close_button" parent="@android:style/Widget.Button">
        <item name="android:layout_width">140sp</item>
        <item name="android:layout_height">60sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:background">@drawable/btn_default_bg</item>
    </style>

    <style name="im_popup_clear_button" parent="@android:style/Widget.Button">
        <item name="android:layout_width">95sp</item>
        <item name="android:layout_height">60sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginLeft">45sp</item>
        <item name="android:background">@drawable/btn_default_bg</item>
    </style>
    <style name="MyTheme.NoTitleBar.CustomBackground" parent="@android:Theme.Black">  
        <item name="android:windowBackground">@drawable/splash</item>  
        <item name="android:windowNoTitle">true</item>  
        <item name="android:windowContentOverlay">@null</item>  
	</style>
</resources>