<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal" >

    <Button
        android:id="@+id/button_1"
        style="@style/im_popup_number_button"
        android:text="1" />

    <Button
        android:id="@+id/button_2"
        style="@style/im_popup_number_button"
        android:layout_toRightOf="@+id/button_1"
        android:text="2" />

    <Button
        android:id="@+id/button_3"
        style="@style/im_popup_number_button"
        android:layout_toRightOf="@+id/button_2"
        android:text="3" />

    <Button
        android:id="@+id/button_4"
        style="@style/im_popup_number_button"
        android:layout_below="@+id/button_1"
        android:text="4" />

    <Button
        android:id="@+id/button_5"
        style="@style/im_popup_number_button"
        android:layout_below="@+id/button_1"
        android:layout_toRightOf="@+id/button_4"
        android:text="5" />

    <Button
        android:id="@+id/button_6"
        style="@style/im_popup_number_button"
        android:layout_below="@+id/button_1"
        android:layout_toRightOf="@+id/button_5"
        android:text="6" />

    <Button
        android:id="@+id/button_7"
        style="@style/im_popup_number_button"
        android:layout_below="@+id/button_4"
        android:text="7" />

    <Button
        android:id="@+id/button_8"
        style="@style/im_popup_number_button"
        android:layout_below="@+id/button_4"
        android:layout_toRightOf="@+id/button_7"
        android:text="8" />

    <Button
        android:id="@+id/button_9"
        style="@style/im_popup_number_button"
        android:layout_below="@+id/button_4"
        android:layout_toRightOf="@+id/button_8"
        android:text="9" />

    <Button
        android:id="@+id/button_close"
        style="@style/im_popup_close_button"
        android:layout_below="@+id/button_7"
        android:text="@string/close" />

    <Button
        android:id="@+id/button_clear"
        style="@style/im_popup_clear_button"
        android:layout_alignBottom="@+id/button_close"
        android:layout_toRightOf="@+id/button_close"
        android:text="@string/clear" />

</RelativeLayout>